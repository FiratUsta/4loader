{
    "manifest_version": 2,
    "name": "4loader",
    "version": "1.0",
  
    "description": "Download media from 4chan threads.",
  
    "icons": {
      "48": "icons/icon.png"
    },
  
    "permissions": [
      "activeTab",
      "downloads",
      "storage"
    ],
  
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "4loader",
      "default_popup": "popup/popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.4chan.org/*/thread/*"],
        "js": ["content.js"]
      }
    ],
  
    "background": {
      "scripts": ["background.js"]
    }
  }
  