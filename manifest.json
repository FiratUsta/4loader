{
    "manifest_version": 2,
    "name": "4zip",
    "version": "1.0",
  
    "description": "Zips and downloads all images in a 4chan thread.",
  
    "icons": {
      "48": "icons/icon.png"
    },
  
    "permissions": [
      "activeTab",
      "downloads"
    ],
  
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "4zip"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.4chan.org/*/thread/*"],
        "js": ["4loader.js"]
      }
    ],
  
    "background": {
      "scripts": ["background.js"]
    }
  }
  